[Unit]
Description=Celery Worker Backend daemon
After=network.target

[Service]
Type=forking
WorkingDirectory=/var/www/html/rwanda/backend
ExecStart=/bin/sh -c '/var/www/html/rwanda/backend/venv/bin/celery -A rwanda multi start rwanda_w1 rwanda_w2 --loglevel=INFO --time-limit=300 --concurrency=4 --pidfile=/var/www/html/rwanda/backend/worker.pid --logfile=/var/log/celery/rwanda-backend-worker.log'
ExecReload=/bin/sh -c '/var/www/html/rwanda/backend/venv/bin/celery -A rwanda multi restart rwanda_w1 rwanda_w2 --loglevel=INFO --time-limit=300 --concurrency=4 --pidfile=/var/www/html/rwanda/backend/worker.pid --logfile=/var/log/celery/rwanda-backend-worker.log'
ExecStop=/bin/sh -c '/var/www/html/rwanda/backend/venv/bin/celery -A rwanda multi stopwait rwanda_w1 rwanda_w2 --loglevel=INFO --time-limit=300 --concurrency=4 --pidfile=/var/www/html/rwanda/backend/worker.pid --logfile=/var/log/celery/rwanda-backend-worker.log'
Restart=always

[Install]
WantedBy=multi-user.target